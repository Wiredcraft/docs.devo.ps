{
    "source": "./source",
    "destination": "./_site",
    "metadata": {
        "site": {
            "title": "devo.ps Documentation",
            "description": "Documentation for devo.ps."
        }
    },
    "metalsmith": {
        "metalsmith-metadata": {
            "concepts_menu": "concepts/menu.yaml",
            "manual_menu": "manual/menu.yaml",
            "services_menu": "services/menu.yaml",
            "providers_menu": "providers/menu.yaml"
        },
        "metalsmith-markdown": {
            "xhtml": true
        },
        "metalsmith-headings": {},
        "metalsmith-permalinks": {},
        "metalsmith-templates": {
            "engine": "swig",
            "cache": false,
            "default": "page.html",
            "directory": "./templates"
        },
        "metalsmith-assets": null,
        "metalsmith-static": null
    },             
    "assets": {
        "vendor": {
            "js": [
                "vendor/jquery/dist/jquery.js",
                "vendor/highlightjs/highlight.pack.js",
                "vendor/swipe/swipe.js"
            ],
            "css": [
                "vendor/normalize-css/normalize.css"
            ]
        },
        "custom": {
            "js": [
                "assets/js/*.js"
            ],
            "css": [
                "assets/css/*.css"
            ],
            "scss": [
                "assets/scss/**/*.{scss,sass}"
            ],
            "favicons": [
                "assets/favicons/*"
            ],
            "fonts": [
                "assets/fonts/*"
            ]
        }
    }
}
